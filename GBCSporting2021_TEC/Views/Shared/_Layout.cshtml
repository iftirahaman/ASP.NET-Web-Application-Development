<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SportsPro</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        @Html.ActionLink("SportsPro", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTop" aria-controls="navbarTop" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTop">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item active">@Html.ActionLink("Products", "List", "Products", null, new { @class = "nav-link" })</li>
                <li class="nav-item active">@Html.ActionLink("Technicians", "List", "Technicians", null, new { @class = "nav-link" })</li>
                <li class="nav-item active">@Html.ActionLink("Customers", "List", "Customers", null, new { @class = "nav-link" })</li>
                <li class="nav-item active">@Html.ActionLink("Incidents", "List", "Incidents", null, new { @class = "nav-link" })</li>
                <li class="nav-item active">@Html.ActionLink("Registrations", null, null, null, new { @class = "nav-link" })</li>
                <li class="nav-item active">@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - SportsPro</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
